#!/bin/bash
DRIVE=${1:-/media/data/.crypto_p}
DIR=${2:-/home/himdel/P}
DM=${3:-crypto_p}

function _mount {
	mkdir -p "$DIR"
	sudo cryptsetup luksOpen "$DRIVE" "$DM"
	sudo mount /dev/mapper/"$DM" "$DIR"
}

function _umount {
	sudo umount "$DIR"
	sudo cryptsetup luksClose "$DM"
	rmdir "$DIR"
}

FNC=_mount
if [ "$1" = '-u' ]; then
	FNC=_umount
fi

$FNC
