#!/bin/sh

case "$1" in
"on")
  DEV=`bluetoothctl devices | grep ${2:-'Aeropex\|OpenMove'} | awk '{ print $2 }'`
  bluetoothctl connect "$DEV"
  ;;
"off")
  bluetoothctl disconnect `bluetoothctl info | grep ^Device | awk '{ print $2 }'`
  ;;
*)
  echo "usage: `basename "$0"` <on|off>" 1>&2
  exit 1
  ;;
esac
