#!/bin/bash
set -e

git fetch --all --prune

# Remove local fully merged branches
git branch --merged upstream/master | sed 's/^[ ]\+//' | grep -v '^master$' | xargs -d'\n' git branch -D

# Remove origin/ fully merged branches, except for master
git branch --remotes --merged upstream/master | sed 's/^[ ]\+//' | grep '^origin/' | grep -v '/master$' | sed 's/^origin\///' | xargs -d'\n' git push --delete origin

git fetch --all --prune
